{
  "name": "umodb",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "pull": "git pull",
    "push": "git push",
    "commit": "cz",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/umodb/test/jest-e2e.json",
    "gen.doc.api": "spectaql ./docs/config.yml -1 -t ./docs/public",
    "gen.doc.project": "typedoc --entryPointStrategy expand ./src --darkHighlightTheme dark-plus",
    "gen.database:models": "prisma generate",
    "sonar:scanner": "jest --coverage && sonar-scanner",
    "prisma.migrate": "prisma migrate"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/microservices": "^8.4.4",
    "@nestjs/graphql": "^9.1.1",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-fastify": "^8.1.1",
    "@prisma/client": "3.6.0",
    "reflect-metadata": "^0.1.13",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.0",
    
    "fastify": "^3.25.3",
    "fastify-passport": "^0.5.0",
    "graphql": "^15.7.1",
    "jsonwebtoken": "^8.5.1",
    "spectaql": "^0.11.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "webpack": "^5.0.0",
    "@arkweid/lefthook": "^0.7.7",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
